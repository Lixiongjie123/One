<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="其他设置"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="其他设置"
                android:textSize="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="夜间模式"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <CheckBox
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="清除缓存"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="更多"
                android:textSize="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="去评分"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/textView2" />
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="联系我们"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="用户协议"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="版本号"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="推荐应用"
                android:textSize="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="某某应用"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>