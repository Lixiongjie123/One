<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/music_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageButton
            android:background="#FFFFFFFF"
            android:src="@mipmap/ali_feedback_icon_back_white"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/music_imageButton1" />

        <RelativeLayout
            android:id="@+id/music_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:textColor="#ADADAD"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="一个阅读"
                android:textSize="20sp"
                android:id="@+id/music_textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ImageButton
            android:src="@mipmap/feeds_share"
            android:background="#FFFFFF"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/music_imageButton2" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/titleline"
        android:background="#8E8E8E"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/blow"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">
            <ImageButton
                android:layout_marginLeft="8sp"
                android:id="@+id/collect"
                android:src="@mipmap/bubble_collect"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"/>
            <ImageButton
                android:layout_marginLeft="8dp"
                android:id="@+id/like"
                android:src="@mipmap/bubble_like"
                android:background="#FFFFFF"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <ImageButton
                android:layout_marginLeft="8dp"
                android:id="@+id/comment"
                android:background="#FFFFFF"
                android:src="@mipmap/bottom_comment"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="喜欢"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="评论"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>