<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="用户反馈"
                android:textSize="16dp"
                android:textColor="#DC143C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="我要反馈"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="常见问题"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q1:图片如何收藏和保存？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q2：文章怎么收藏？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q3:听书功能还有吗？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q4:在哪里查看往期文章？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q5:音乐循环播放怎么取消？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="Q6:如何投稿？"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp" />
                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:background="#E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>